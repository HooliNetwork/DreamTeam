@model LoginViewModel
@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewBag.Title = "Log in";
}
    <div class="row">
        <div class="col-lg-4 col-md-5 col-sm-6 col-xs-10 col-centered">
            <div class="content-box">
                <h1>@ViewBag.Title.</h1>
                <form asp-controller="Account" asp-action="Login" id="form-login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" role="form">
                    <h2>Log in </h2>
                    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                    <fieldset>
                        <input asp-for="Username" class="form-control full-width" id="username" name="username" placeholder="Your Username" autofocus="autofocus" required="required"/>
                        <span asp-validation-for="Username" class="text-danger"></span>
                        <input asp-for="Password" class="form-control" id="password" name="password" placeholder="Password" required="required"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </fieldset>
                    <div class="checkbox">
                        <label>
                            <input asp-for="RememberMe" id="remember_me" name="remember_me" />
                            <span>Remember me</span>
                        </label>
                       
                    </div>
                    <button type="submit" value="Log in" class="btn btn-primary btn-block" id="form_login_button">Log in</button>
                </form>
                <div class="form-login-forgotten text-right">
                    <a asp-action="ForgotPassword">Forgot your password?</a>
                </div>
            </div>

        </div>
    </div>
