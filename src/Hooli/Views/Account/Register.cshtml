@model RegisterViewModel
@{
    ViewBag.Title = "Sign up";
}

<div class="row">
    <div class="col-lg-4 col-md-5 col-sm-6 col-xs-10 col-centered">
        <div class="content-box">
            <h1>Join Hooli today!</h1>
            <form asp-controller="Account" asp-action="Register" enctype="multipart/form-data" id="form-signup" method="post" class="form-horizontal" role="form">
                <h2>Sign up with your email address</h2>
                <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                <fieldset>
                    <input asp-for="Username" type="text" class="form-control" style="width:100%;" id="username" placeholder="Username" required="required" data-toggle="tooltip" data-placement="bottom" data-html="true" title="Your unique URL name, hooli.com/p/yourUsername<br><strong>This cannot be changed later!</strong>" />
                    <span asp-validation-for="Username" class="text-danger"></span>

                    <input asp-for="FirstName" type="text" class="form-control" id="first_name" placeholder="First name" autofocus="autofocus" required="required"/>

                    <input asp-for="LastName" type="text" class="form-control" id="last_name" placeholder="Last name" required="required"/>
                    <span asp-validation-for="FirstName" class="text-danger"></span>

                    <span asp-validation-for="LastName" class="text-danger"></span>

                    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Email" required="required"/>
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password" required="required"/>
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" required="required"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <input asp-for="ProfilePicture" type="file" id="file" name="file" class="form-control"/>
                </fieldset>

                <button type="submit" class="btn btn-primary btn-block btn-mtop" id="form_signup_button" value="Register" />Sign up</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
